{
  "name": "quizzer_be",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "test": "ava"
  },
  "dependencies": {
    "@tooxoot/quizzer-protocol": "^1.0.4",
    "ws": "^7.4.2"
  },
  "devDependencies": {
    "@types/ws": "^7.4.0",
    "ava": "^3.15.0",
    "nodemon": "^2.0.7",
    "testcontainers": "^7.4.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "nodemonConfig": {
    "ignore": [
      "__test__/*",
      "dist/*"
    ],
    "ext": "ts",
    "delay": "1500",
    "exec": "tsc && node ./dist/app.js"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
